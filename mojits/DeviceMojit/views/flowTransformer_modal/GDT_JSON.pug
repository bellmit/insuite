div#transformerModel
  div.form-group
    h4(data-bind="text: parserSettingsI18n + ':'")
    span.checkbox
      label.control-label
        strong(data-bind="text: softValidationI18n")
        input(type="checkbox", name="softValidationBox", data-bind="checked: softValidation")
      i.dc-info-icon(data-toggle="popover", data-bind="attr: {'data-original-title': popoverTitleI18n, 'data-content': popoverI18n }", data-html="true", rel="popover", data-placement="auto left", data-trigger="click")
    span.checkbox
      label.control-label
        strong(data-bind="text: gdtUseLastChangedActivityI18n")
        input(type="checkbox", name="gdtUseLastChangedActivityBox", data-bind="checked: gdtUseLastChangedActivity")
    label(for="transformerSelect2GdtVersion", data-bind="text: gdtVersionI18n + ':'")
    input.form-control.input-sm#transformerSelect2GdtVersion(type="hidden", data-bind="select2: select2GdtVersion")
    span.checkbox
      label.control-label
        input(type="checkbox", name="mapSubtypeBox", style="margin-top:9px;", data-bind="checked: mapSubtype")
        input.form-control.input-sm#transformerGdtReceiver(style="width:92px; display: inline-block;", data-bind="value: subtypeToMap, valueUpdate:'afterkeydown', attr: { placeholder: mapSubtypePlaceholderI18n }")
        strong(data-bind="text: ' ' + mapSubtypeI18n")
    span.checkbox
      label.control-label
        input(type="checkbox", name="deleteAttachmentsBox", data-bind="checked: deleteAttachments")
        strong(data-bind="text: ' ' + deleteAttachmentsI18n")
    span.checkbox
      label.control-label
        input(type="checkbox", name="forceCreateNewActivityCheckBox", data-bind="checked: forceCreateNewActivity")
        strong(data-bind="text: ' ' + forceCreateNewActivityMsgI18n")
    hr
    h4(data-bind="text: configOfAdditionGDTFieldsI18n + ':'")
    button.btn.btn-primary(data-bind="click: onAddRowClick")
      i.fa.fa-plus
    div.form-group
      table.table
        colgroup
          col(style="width:15%")
          col(style="width:55%")
          col(style="width:20%")
          col(style="width:10%")
        thead
          tr
            th(data-bind="text: gdtFieldNumberI18n")
            th(data-bind="text: gdtMappingRegexStringI18n")
            th(data-bind="text: gdtMappingActionI18n")
            th(data-bind="html: ''")
        tbody(data-bind="foreach: gdtMappingsForUnknownFields")
          tr
            td
              div.form-group(data-bind="hasFeedback: { field: gdtFieldNumber, toggle: gdtFieldNumber.hasError, messages: gdtFieldNumber.validationMessages }" )
                input.form-control(type="text", data-bind="textInput: gdtFieldNumber")
            td
              div.form-group(data-bind="hasFeedback: { field: gdtMappingRegexString, toggle: gdtMappingRegexString.hasError, messages: gdtMappingRegexString.validationMessages }" )
                input.form-control(type="text", data-bind="textInput: gdtMappingRegexString")
            td
              div.form-group(data-bind="hasFeedback: { field: gdtMappingAction, toggle: gdtMappingAction.hasError, messages: gdtMappingAction.validationMessages }" )
                input.form-control.input-sm#transformerSelect2GdtMappingAction(type="hidden", data-bind="select2: select2GdtMappingAction")
            td
              button.btn.btn-primary(data-bind="click: function(data){$parent.onDeleteRowClick($index());}")
                i.fa.fa-trash
    label.small
      span(data-bind="text: gdtMappingExampleHeadlineI18n")
      br
      span(data-bind="text: gdtMappingExample1I18n")
      br
      span(data-bind="text: gdtMappingExample2I18n")
      br
      br
      span(data-bind="text: gdtMappingFieldsI18n + ':'")
      br
      span(data-bind="text: 'Leistung'")
      br
      ul
        li Muss:
          i(data-bind="attr: { title: gdtMappingTagsTreatmentCodeI18n }") treatmentCode
        li Kann:
          i(data-bind="attr: { title: gdtMappingTagsTreatmentPriceI18n }") treatmentPrice,
          i(data-bind="attr: { title: gdtMappingTagsTreatmentDescriptionI18n }") treatmentDescription
      span(data-bind="text: 'Diagnose'")
      ul
        li Muss:
          i(data-bind="attr: { title: gdtMappingTagsIcd10I18n }") icd10
        li Kann:
          i(data-bind="attr: { title: gdtMappingTagsIcdDescriptionI18n }") icdDescription