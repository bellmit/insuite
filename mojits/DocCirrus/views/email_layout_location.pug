doctype html
html
  head
    title Doc Cirrus Registrierung
  body(style="width:100%;height:100%;")
    .main(style="background-color:white;width:75%;min-width:320px;position:relative;margin:auto;margin-top:5%;border-style: solid;border-width: 1px;border-color: #244061;padding:10px;font-style: normal;font-weight: normal;display: block;font-family: Verdana, Geneva, sans-serif;color:#244061;")
      - if(params.hasLogo)
        .headercontent(style="width:100%;min-width:320px;background-color:white;text-align:left;padding-top:10px;padding-bottom:10px;")
          img(style="width:200px;margin-right:0px;", alt=(params && params.logoName != null) ? params.logoName: "Doc Cirrus GmbH", src="cid:logo")
      .text(style="width:100%;")
        block emailbody
        - if(params && params.emailBody)
          p!= params.emailBody
      - if(params.emailFooter)
        .text(style="width: 100%;")!= params.emailFooter
      .footercontent(style="width:100%;min-width:320px;margin-top:5%;text-align:left;border-style: solid;border-width: 0px;border-top-width: 1px;border-top-style: solid;border-top-color: #244061;")
        - if(params.docCirrusSign)
          p(style="font-family: Verdana, Geneva, sans-serif;color:#244061;font-size:12px;font-weight: normal;margin-top:0px;margin-bottom:0px;")!= params.docCirrusSign
        a(style="font-family: Verdana, Geneva, sans-serif;color:#244061;font-size:12px;font-weight: normal;margin-top:0px;margin-bottom:0px;" href="https://www.doc-cirrus.com/") www.doc-cirrus.com
        p(style="font-family: Verdana, Geneva, sans-serif;color:#244061;font-size:9px;font-weight: normal;margin-top:0px;margin-bottom:0px;") !{(params && params.serialNumber) ? ' (SN: ' + params.serialNumber + ')' : ''}
