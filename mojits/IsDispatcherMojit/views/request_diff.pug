section
    div.table-responsive.showAuditDiffDialog
        table.table.table-striped.table-condensed
            colgroup
                col(style="width:30%")
                col(style="width:35%; border-left: 1px solid #ddd;")
                col(style="width:35%; border-left: 1px solid #ddd;")
            thead
                tr
                    th(data-bind="text: columnKeyLabel")
                    th(data-bind="text: columnValueNewLabel")
                    th(data-bind="text: columnValueOldLabel")
            tbody(data-bind="foreach: rows")
                tr
                    th(data-bind="text: property")
                    td(data-bind="text: newValue, css: { 'bg-newValue': newValue != oldValue }", style="word-break: break-all; ")
                    td(data-bind="text: oldValue, css: { 'bg-oldValue': oldValue !== newValue }", style="word-break: break-all;")

    div.table-responsive.showAuditDiffDialog
        table.table.table-striped.table-condensed
            colgroup
                col(style="width:30%")
                col(style="width:35%; border-left: 1px solid #ddd;")
                col(style="width:35%; border-left: 1px solid #ddd;")

            tbody(data-bind="foreach: activities")
                tr(data-bind="ifnot: splitter")
                    th(data-bind="text: property")
                    td(data-bind="text: newValue, css: { 'bg-newValue': newValue !== oldValue }", style="word-break: break-all; ")
                    td(data-bind="text: oldValue, css: { 'bg-oldValue': oldValue !== newValue }", style="word-break: break-all; ")
                //ko if: splitter
                tr(height="10px")
                    th(colspan="3")
