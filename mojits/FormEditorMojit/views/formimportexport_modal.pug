div#divImportExportContainer

  div(data-bind="visible: inBatchOp")#divBackupProgressArea
    div.progress
      div.progress-bar(role="progressbar", data-bind="attr: { 'aria-valuenow': inBatchProgress, 'aria-valuemax': inBatchTotal }, style: { width: inBatchPercentageStr}",aria-valuemin="0")#divBackupProgressBar
        span.sr-only(data-bind="text: inBatchPercentageStr")#spanBackupProgressSr

      //div.progress-bar(role="progressbar",aria-valuenow="0",aria-valuemin="0",aria-valuemax="100",style="width:0%;")#divBackupProgressBar
        span.sr-only#spanBackupProgressSr 0%

  table(noborder="noborder",width="100%")#tableImportExport
    tr
      td(valign="top",width="47%")
        div.form-group
          input.form-control.form-control-search(data-bind="value: diskSearchText, valueUpdate: 'afterkeydown', attr: { placeholder: formSearchPlaceholder }")

        h4(data-bind="text: lblDiscUserI18n")
        div.treeview.v2
          div(data-bind="template: diskTreeUser.tree.template")
        h4(data-bind="text: lblDiscDefaultI18n")
        div.treeview.v2
          div(data-bind="template: diskTreeDefault.tree.template")

        br
        button.btn.btn-default(data-bind="click: btnImportAll, text: BTN_ARC_IMPORT")
        span &nbsp;
        button.btn.btn-default(data-bind="click: btnClearArchive, text: BTN_ARC_DELETE")

      td(width="10px")

      td(valign="top",width="47%")
        div.form-group
          input.form-control.form-control-search(data-bind="value: formSearchText, valueUpdate: 'afterkeydown', attr: { placeholder: formSearchPlaceholder }")

        h4(data-bind="text: lblDbUserI18n")
        div.treeview.v2
          div(data-bind="template: formsTreeUser.tree.template")

        h4(data-bind="text: lblDbDefaultI18n")
        div.treeview.v2
          div(data-bind="template: formsTreeDefault.tree.template")

        br
        button.btn.btn-default(data-bind="click: btnExportAll, text: BTN_ARC_EXPORT")

  br
  hr
  div#divCheckHistory
    div.checkbox
      label
        input(type="checkbox",data-bind="checked: exportVersions")#chkWithHistory
        i(data-bind="text: lblCheckboxExpI18n")
  div#divPerformance

  div(style="display:none;")#divWaiting
