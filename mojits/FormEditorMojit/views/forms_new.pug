div.form-group#divNewFormTemplate
    div#divValidateMsg
    table(noborder="noborder")
        tr
            td(style="width: 20%;", data-bind="text: lblFormNameI18n", valign="top")
            td
                input.form-control(type="text",style="width: 100%;")#txtNewFormName
                br

        tr(style="display:none;","valign: top")
            td(style="width: 20%;", data-bind="text: lblFormCategoryI18n + ':'")
            td
                span#spanSelCat
                br

        tr
            td(data-bind="text: lblPaperSizeI18n + ':'", valign="top")
            td

                table(noborder="noborder")
                  tr
                    td
                      input.form-control(type="text")#txtNewFormWidth
                    td(width="80px")
                      | &nbsp;
                      small(data-bind="text: '(' + lblWidthI18n + ', mm)'")
                      | &nbsp;
                    td
                      input.form-control(type="text")#txtNewFormHeight
                    td(width="80px")
                      | &nbsp;
                      small(data-bind="text: '(' + lblHeightI18n + ', mm)'")
                      | &nbsp;
                br
        tr
            td(data-bind="text: lblPresentsI18n + ':'", valign="top")
            td
                span#spnPaperSizes
                br
                br
        tr
            td(data-bind="text: lblOrientationI18n + ':'", valign="top")
            td
                select.form-control(name="selectOrientation")#selOrientation
                    option(value="portrait", data-bind="text: lblPortraitI18n")
                    option(value="landscape", data-bind="text: lblLandscapeI18n")
                br

        tr
            td
            td(style="padding-top: 10px;")
                div.checkbox
                    input(type="checkbox")#chkNewInSight2
                    label.checkbox-inline(for="chkNewInSight2")
                        span(style="margin-left: 15px;", data-bind="text: lblInsight2I18n")

        tr(style="display: none;")
            td(data-bind="text: lblFormSchemaI18n")
            td
                span#spnSelectSchema

    div(style="text-align: right; display: none;")#divNewFormButtons
        button.btn#btnNewFormCancel(data-bind="text: btnCancelI18n")
        button.btn.btn-primary#btnNewFormOk(data-bind="text: btnOkI18n")