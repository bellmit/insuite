div.table-responsive
  table.table
    colgroup
      col(style="width:30%")
      col(style="width:35%; border-left: 1px solid #ddd;")
      col(style="width:35%; border-left: 1px solid #ddd;")
    tbody(data-bind="foreach: tables")
      tr
        th(colspan="3")
          h4(data-bind="text: label")
      tr
        th
        th(data-bind="text: $parent.cardDataI18n")
        th(data-bind="text: $parent.selPatientI18n")
      // ko foreach: data
      tr(data-bind="css: (isConflict()?'row-conflict':'row-ok')")
        th(data-bind="text: property")
        td.bg-noconflict(data-bind="text: $root.format(valueCard)")
        td.bg-conflict(data-bind="text: $root.format(valuePatient)")
      // /ko