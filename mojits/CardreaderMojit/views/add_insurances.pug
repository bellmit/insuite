script(type="text/html", id="AddInsurancesModel")
  div.row.panel.panel-default
    div.col-xs-12
      p(data-bind="text: insuranceOnCardreadI18n")
      div(data-bind="foreach: insurances")
        div.checkbox
          label
            span.glyphicon.glyphicon-ok-circle(style="padding-left: 4px;", data-bind="tooltip: {title: 'Kostentr√§ger existiert bereits!'}, visible: alreadyExists")
            span.glyphicon.glyphicon-tag(style="padding-left: 4px;", data-bind="tooltip: {title: 'Karte im aktuellen Quartal gelesen?'}, visible: 'PUBLIC' === type")
            strong(style="padding-left: 4px;", data-bind="text: i18n")
            input(type="checkbox", data-bind="checked: checked")

    div.col-xs-12(data-bind="if: showCopyPart")
      p(data-bind="text: toOtherInsurancesI18n")
      div(data-bind="foreach: insurancesToCopyTo")
        div.checkbox
          label
            strong(data-bind="text: i18n")
            input(type="checkbox", data-bind="checked: checked, disable: disabled")
