            h4.font-size-16px(data-bind="text: notificationsAppNewI18n")
            div
              // ko if: createAlertForPatientByEmail
              div.form-group(data-bind="with: createAlertForPatientByEmail")
                label.col-xs-7.control-label(for="createAlertForPatientByEmail", data-bind="text: $parent.emailPatI18n")
