                label.col-xs-7.control-label(for="createAlertForLocationByEmail", data-bind="text: $parent.copyEstI18n ")
                .col-xs-5
                  .checkbox
                    input#createAlertForLocationByEmail(name="createAlertForLocationByEmail", type="checkbox", data-bind="checked: active")
              // /ko
              // ko if: createAlertForPatientBySms
              div.form-group(data-bind="with: createAlertForPatientBySms")
                label.col-xs-7.control-label(for="createAlertForPatientBySms", data-bind="text: $parent.smsPatI18n")
                .col-xs-5
                  .checkbox
                    input#createAlertForPatientBySms(name="createAlertForPatientBySms", type="checkbox", data-bind="checked: active, click: $parent.showConfirmDialogForCheckBox")
