h4(data-bind="text: groupGenSetI18n")
div.panel.panel-default
  div.panel-body
    div.form-group(data-bind="hasFeedback: { field: empiricalvalue, toggle: empiricalvalue.hasError, messages: empiricalvalue.validationMessages }")
      label.control-label(data-bind="text: labelExpValueI18n")
      input.form-control(data-bind="value: _empiricalvalue, valueUpdate: 'afterkeydown'")

    div.form-group
      div.checkbox
        label.control-label
          span(data-bind="text: labelAutoAssignmentI18n")
          input(type="checkbox", name="autoAssignmentOfDiagnosis", data-bind="checked: autoAssignmentOfDiagnosis")
      div.checkbox
        label.control-label
          span(data-bind="text: checkBoxDiagnosisI18n")
          input(type="checkbox", name="kbvFocusFunctionalityContinuousDiagnosis", data-bind="checked: kbvFocusFunctionalityContinuousDiagnosis")
      div.checkbox
        label.control-label
          span(data-bind="text: askForCreationAfterCartReaderI18n")
          input(type="checkbox", name="askForCreationOfAdditionalInsurancesAfterCardread", data-bind="checked: askForCreationOfAdditionalInsurancesAfterCardread")
      div.checkbox(style="padding-left: 40px;", data-bind="visible: true === askForCreationOfAdditionalInsurancesAfterCardread()")
        label.control-label
          span(data-bind="text: copyPublicInsuranceDataI18n")
          input(type="checkbox", name="copyPublicInsuranceDataToAdditionalInsurance", data-bind="checked: copyPublicInsuranceDataToAdditionalInsurance")
      h4(data-bind="text: labelAutoValidationI18n")
      .alert.alert-warning
        p(data-bind="text: hintAutoValidationI18n")
      div.form-group
        .row
          .col-xs-1.col-xs-offset-1
            label.control-label(style="margin-top: 4px;", data-bind="text: gkvAutoValidationI18n")
          .col-xs-4
            div.date-picker.input-group
              input.form-control(name="gkvAutoValidationAt", type="text", data-bind="datetimepicker: { options: { format: 'HH:mm'}, value: gkvAutoValidationAt }")
