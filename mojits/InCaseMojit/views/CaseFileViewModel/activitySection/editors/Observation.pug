div.row(data-bind="notifyBind: { method: 'contentEditableReady', namespace: $data }")
  div.col-xs-6.col-md-7.col-lg-8
    div.form-group
      div(data-bind="visible: showMarkdownEditor")
        div(data-bind="with: wyswyg")
          include ../../../../../FormEditorMojit/views/WYSWYG.pug

          div.markdown-editor.form-control(style="height: 300px; overflow: auto;",data-bind="contentEditable: isEditable, htmlLazy: htmlContent")#simpleActivityEditableDiv

      textarea.form-control(name="userContent", data-bind=" \
        caretPosition: userContent.caretPosition, \
        attr: {rows: '10'}, \
        value: userContent, \
        valueUpdate: 'afterkeydown', \
        hasFocus: textEditorFocus, \
        readOnly: userContent.readOnly, \
        visible: showTextEditor")

  div.col-xs-6.col-md-5.col-lg-4
    div.form-group
      label.control-label(data-bind="text: observationTherapyStatus.i18n")
      select.form-control(name="observationTherapyStatus", data-bind="options: _observationTherapyStatusList, optionsValue: 'val', optionsText: '-de', value: observationTherapyStatus, readOnly: observationTherapyStatus.readOnly")
    div.form-group
      label.control-label(data-bind="text: observationValuation.i18n")
      select.form-control(name="observationValuation", data-bind="options: _observationValuationList, optionsValue: 'val', optionsText: '-de', value: observationValuation, readOnly: observationValuation.readOnly")