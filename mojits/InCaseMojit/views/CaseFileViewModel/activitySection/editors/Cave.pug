div.row(data-bind="notifyBind: { method: 'contentEditableReady', namespace: $data }")
  div.col-md-11
    div.form-group
      div(data-bind="visible: showMarkdownEditor")
        div(data-bind="with: wyswyg")
          include ../../../../../FormEditorMojit/views/WYSWYG.pug

          div.markdown-editor.form-control(style="height: 300px; overflow: auto;",data-bind="contentEditable: isEditable, htmlLazy: htmlContent, style:{ color: $parent.textColor }")#simpleActivityEditableDiv

      textarea.form-control(name="userContent", data-bind=" \
        caretPosition: userContent.caretPosition, \
        attr: {rows: '10'}, \
        value: userContent, \
        valueUpdate: 'afterkeydown', \
        hasFocus: textEditorFocus, \
        readOnly: userContent.readOnly, \
        style:{ color: textColor }, \
        visible: showTextEditor")

  div.col-md-1
    // ko foreach: severityOptions
    div(style="height: 34px; width: 34px; margin-bottom: 3px")
      button.btn.btn-default(style="height: 100%; width: 100%; border-radius: 5px;", data-bind="style:{ backgroundColor: $data.color }, click: $parent.setSeverity")
    // /ko