div.row
  div.col-xs-3
    div.radio
      label.control-label
        span(data-bind="text: firstI18n")
        input(type="radio", name="dmpType", value="FIRST", data-bind="checked: dmpType, readOnly: dmpType.readOnly")
      span(data-bind="dmpField: { field: dmpType }")
  //- NB: The dmpType "PNP" is specific to actType "BK" and is thus filtered out for other DMPs -------------------------
  div(data-bind="visible: actType() === 'BK'")
    div.col-xs-3
      div.radio
        label.control-label
          input(type="radio", name="dmpType", value="PNP", data-bind="checked: dmpType, readOnly: dmpType.readOnly")
          span(data-bind="text: dmpTypeI18n")
        span(data-bind="dmpField: { field: dmpType }")
  //- ------------------------------------------------------------------------------------------------------------------
  div.col-xs-3
    div.radio
      label.control-label
        span(data-bind="text: followingI18n")
        input(type="radio", name="dmpType", value="FOLLOWING", data-bind="checked: dmpType, readOnly: dmpType.readOnly")
      span(data-bind="dmpField: { field: dmpType }")
  div.col-xs-3
    div.checkbox
      label.control-label
        span(data-bind="text: dmpCreatedInRepresentation.i18n")
        input(type="checkbox", name="dmpCreatedInRepresentation", data-bind="checked: dmpCreatedInRepresentation, readOnly: dmpCreatedInRepresentation.readOnly")
      span(data-bind="dmpField: { field: dmpCreatedInRepresentation }")
.row
  div.col-xs-3
    div.checkbox
      label.control-label
        span(data-bind="text: dmpPhsicianChanged.i18n")
        input(type="checkbox", name="dmpPhsicianChanged", data-bind="checked: dmpPhsicianChanged, readOnly: dmpPhsicianChanged.readOnly")
  div.col-xs-3
    div.form-group(data-bind="hasFeedback: { field: dmpHeadDate, toggle: dmpHeadDate.hasError, messages: dmpHeadDate.validationMessages }")
      label.control-label
        span(data-bind="text: dmpHeadDate.i18n")
        span(data-bind="dmpField: { field: dmpHeadDate }")
      .date-picker.input-group
          input.form-control(name="dmpHeadDate", data-bind="datetimepicker: { value: dmpHeadDate }, readOnly: dmpHeadDateReadOnly")
  div.col-xs-3
    div.form-group(data-bind="hasFeedback: { field: dmpSignatureDate, toggle: dmpSignatureDate.hasError, messages: dmpSignatureDate.validationMessages }")
      label.control-label
        span(data-bind="text: dmpSignatureDate.i18n")
        span(data-bind="dmpField: { field: dmpSignatureDate }")
      .date-picker.input-group
          input.form-control(name="dmpSignatureDate", data-bind="datetimepicker: { value: dmpSignatureDate }, readOnly: dmpSignatureDate.readOnly")
  div.col-xs-1
    div
      label.control-label Quartal
      select.form-control(name="dmpQuarter", data-bind="options: availableQuarters, value: dmpQuarter, readOnly: dmpQuarter.readOnly")
  div.col-xs-2
    div
      label.control-label Jahr
      select.form-control(name="dmpYear", data-bind="options: availableYears, value: dmpYear, valueAllowUnset: true, readOnly: dmpYear.readOnly")
.row
  .col-xs-3
    div.form-group(data-bind="hasFeedback: { field: dmpScheinRef, toggle: dmpScheinRef.hasError, messages: dmpScheinRef.validationMessages }")
