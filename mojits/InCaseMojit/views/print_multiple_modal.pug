div.row
    strong.col-md-3.col-sm-3.col-xs-3(data-bind="text: activityI18n+ ':'")
    strong.col-md-3.col-sm-3.col-xs-3(data-bind="text: locationI18n + ':'")
    strong.col-md-4.col-sm-4.col-xs-4(data-bind="text: printerI18n + ':'")
    strong.col-md-1.col-sm-1.col-xs-1(data-bind="text: countI18n")
    strong.form-group.col-md-1.col-sm-1.col-xs-1
        input.checkbox(name="printActivityAll", type="checkbox", data-bind="checked: checkedAll, event: {change: selectAllHandler}")
div.row(data-bind="foreach: activities")
    div.col-md-3.col-sm-3.col-xs-3(data-bind="text: getActivityType( item )")
    div.form-group.col-md-3.col-sm-3.col-xs-3
        select.form-control(data-bind="options: userLocations, optionsValue: '_id', optionsText: 'locname', value: locationId")
    div.form-group.col-md-4.col-sm-4.col-xs-4
        select.form-control(data-bind="options: printers, optionsText: $data, value: printerName")
    div.form-group.col-md-1.col-sm-1.col-xs-1
        input.form-control(type="text", data-bind="value: copies")
    div.form-group.col-md-1.col-sm-1.col-xs-1
        input.checkbox(name="printActivity", type="checkbox", data-bind="checked: checked")