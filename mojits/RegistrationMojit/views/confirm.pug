.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")#myModal
  .modal-header
    .btn(type="button", class="close", data-dismiss="modal", aria-hidden="true") ×
    h3 Registrierung für Doc Cirrus Dienste
  .modal-body
    .navbar-form.pull-left
      h4 Ihre Angaben:
      div.listed_form_entries
        strong Ausgewählte Dienste
        ul
          each service in services
            - if(typeof(service.ps) != undefined)
              li!= service.ps
          li
            b
            | Monatliche Kosten:
            | &nbsp;
            != totalPrice
        strong Ansprechpartner
        ul
          li
            | Vorname:
            | &nbsp;
            != firstname
          li
            | Nachname:
            | &nbsp;
            != lastname
          li
          | E-Mail:
          | &nbsp;
          != email
        strong Unternehmen
        ul
          li
            | Name:
            | &nbsp;
            != coname
          li
            | Art:
            | &nbsp;
            != cotype
          li
            | Kontakt:
            | &nbsp;
            != contact
        strong Adresse
        ul
          li
            | Straße:
            | &nbsp;
            != address.street
            | &nbsp;
            != address.houseno
          li
            | PLZ / Stadt:
            | &nbsp;
            != address.zip
            | &nbsp;
            != address.city
          li
            | Land:
            | &nbsp;
            != address.country
        strong Bankverbindung
        ul
          - if(account)
            - if(account.cardType == "BANK")
                li
                  | Bankinstitut:
                  | &nbsp;
                  != account.bankName
                li
                  | Kontoinhaber:
                  | &nbsp;
                  != account.accountOwner
                li
                  | Kontonummer/IBAN:
                  | &nbsp;
                  != account.bankIBAN
                li
                  | Bankleitzahl/BIC:
                  | &nbsp;
                  != account.bankBIC
            - else
                li
                  | Kartennummer:
                  | &nbsp;
                  != account.cardNo
                li
                  | Gültig bis:
                  | &nbsp;
                  != account.cardValidToMonth
                  | .
                  | &nbsp;
                  != account.cardValidToYear
                li
                  | Prüfsumme:
                  | &nbsp;
                  != account.cardCheckCode

