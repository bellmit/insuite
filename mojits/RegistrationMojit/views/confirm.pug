  .modal-footer
    .btn(data-dismiss="modal", aria-hidden="true") Abbrechen
    input(type='hidden', value=firstname, name='fn')
    input(type='hidden', value=lastname, name='ln')
    input(type='hidden', value=email, name='em')
    input(type='submit', value='Senden').btn.btn-primary.disabled#sendbtn

